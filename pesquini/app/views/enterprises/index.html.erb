<!-- Load the javascript that will be used in this page -->
<% content_for :header do -%>
 <%= javascript_include_tag 'serch.js' %>
<% end %>

<div id="enterprises_index">
  <div class="search_form">
      <div class="container">
        <div class="service">
        </div>
        <div class="search_form_enterprises">
          <h1>Ferramenta de busca</h1>
          <hr>
          <%= search_form_for @search do |f| %>
            <%= f.label :corporate_name_cont, "Nome ou CNPJ:" %>
            <%= f.search_field :corporate_name_cont%>
            <%= f.submit %>
          <% end %>
        </div>
    </div>
  </div>
  <span class="division"> <hr> </span>
  <div class="container">
    <% if @enterprises.blank? %>
      <div class="entreprises_title">
        <h3>Não existem sanções contra a empresa procurada.</h3>
        <hr>
      </div>
    <% else %>
      <div class="entreprises_title">
        <h1> Lista das empresas encontradas</h1>
        <hr>
      </div>
      <% @enterprises.each do |p| %>
        <span class="same_line">  <h3>Empresa:</h3><%= link_to p.corporate_name, p %>  </span>
        <span class="same_line">  <h3>CNPJ:</h3> <%= p.cnpj %>  </span>
        <hr>
      <% end %>
    <% end %>
   <div class="pagination">
      <%= will_paginate @enterprises, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
